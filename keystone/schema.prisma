datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Image {
  id               String @id @default(cuid())
  filename         String @default("")
  altText          String @default("")
  name             String @default("")
  from_Post_promo  Post[] @relation("Post_promo")
  from_Post_images Post[] @relation("Post_images")
}

model Post {
  id          String    @id @default(cuid())
  createdAt   DateTime? @default(now())
  seo         String    @default("")
  name        String    @default("")
  slug        String    @unique @default("")
  promo       Image?    @relation("Post_promo", fields: [promoId], references: [id])
  promoId     String?   @map("promo")
  images      Image[]   @relation("Post_images")
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  order       String    @default("")
  content     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  embed       String    @default("")
  status      String?   @default("offline")
  type        String?   @default("music")
  description Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([promoId])
  @@index([authorId])
}
